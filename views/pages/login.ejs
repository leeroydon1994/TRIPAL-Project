<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>

  <!-- Icon -->
  <link rel='icon' href='favicon/favicon.ico' type='image/x-icon'>

  <!-- Personal CSS -->
  <link rel="stylesheet" href="css/login.css">
  <link rel="stylesheet" href="css/header.css">


  <!-- Ttile alters with the spots  -->
  <title>Login - TriPal</title>
</head>

<body>
  <% if (messages.error) { %>
  <%= messages.error %>
  <% } %>
  <header>
    <%- include('../partials/header'); %>
  </header>

  <main class="text-center">
    <div>
      <form action="/login" method="POST" class="form-signin">
        <!-- <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72"> -->
        <h1 class="h3 mb-3 font-weight-normal">Login</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="text" id="username" class="form-control" placeholder="User name" name="username" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit" value="Sign In">Login</button>

      </form>

      <div class='container'>
        <p class="alternate-reminder">Haven't joined yet?</p>

        <a class="btn btn-primary" href="/signup" role="button">Sign Up</a>
      </div>
    </div>
  </main>


  <!-- Script -->
  <%- include('../partials/foot'); %>

  <!-- Specific script -->
  <script src="../../public/js/login.js"></script>


</body>

</html>